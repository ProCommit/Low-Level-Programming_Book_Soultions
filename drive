curl -fLo ~/.vim/autoload/plug.vim --create-dirs \
     https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim


" ====== Plugins ======
call plug#begin('~/.vim/plugged')

" השלמות חכמות
Plug 'neoclide/coc.nvim', {'branch': 'release'}

call plug#end()

" ====== General Settings ======
set nocompatible
set number
syntax on
filetype plugin indent on

" ====== Auto completion behavior ======
set completeopt=menuone,noinsert,noselect
set shortmess+=c

" ====== Colors ======
colorscheme desert

" ====== Coc.nvim Settings ======
" Ctrl + Space לפתיחת השלמות
inoremap <silent><expr> <C-Space> coc#refresh()

" נווט בין הצעות עם Tab
inoremap <expr> <Tab> pumvisible() ? "\<C-n>" : "\<Tab>"
inoremap <expr> <S-Tab> pumvisible() ? "\<C-p>" : "\<S-Tab>"

" קפיצה להגדרה
nmap <silent> gd <Plug>(coc-definition)

" תיעוד (hover)
nnoremap <silent> K :call CocActionAsync('doHover')<CR>
sudo dnf install gcc gcc-c++ make cmake pkg-config openssl-devel -y







{
  "suggest.noselect": false,
  "suggest.enablePreview": true,
  "suggest.acceptOnEnter": "both",
  "languageserver": {
    "clangd": {
      "command": "clangd",
      "filetypes": ["c", "cpp"]
    },
    "asm-lsp": {
      "command": "asm-lsp",
      "filetypes": ["asm", "s", "S"]
    }
  }
}
" גורם ל־Enter לבחור הצעה כשיש השלמה פתוחה
inoremap <silent><expr> <CR> pumvisible() ? coc#_select_confirm() : "\<CR>"



" ========= COC COLOR FIX (Dark / Space Style) =========

" תפריט השלמה (רקע כהה, טקסט בהיר)
highlight Pmenu guibg=#0d1117 guifg=#c8d3f5

" פריט שנבחר בתפריט
highlight CocMenuSel guibg=#3b4261 guifg=#ffffff gui=bold
highlight CocPumSel guibg=#3b4261 guifg=#ffffff gui=bold

" גבולות התפריט (לניגודיות קלה)
highlight PmenuBorder guifg=#3b4261

" טקסט של תיעוד (Hover)
highlight CocFloating guibg=#0f1424 guifg=#c8d3f5

" קווים מתחת לשגיאות / אזהרות
highlight CocUnderline gui=undercurl guisp=#f7768e

" סימנים בצד שמאל
highlight CocErrorSign guifg=#f7768e
highlight CocWarningSign guifg=#e0af68
highlight CocInfoSign guifg=#7aa2f7
highlight CocHintSign guifg=#9ece6a

" הודעות פופ-אפ אחרות של CoC
highlight CocMenuSel guibg=#394b70 guifg=#ffffff
highlight CocPumVirtualText guifg=#7aa2f7
highlight CocSearch guifg=#9ece6a gui=bold
highlight CocFloatThumb guibg=#394b70
highlight CocFloatSbar guibg=#1e2030






