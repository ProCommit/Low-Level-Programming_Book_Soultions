curl -fLo ~/.vim/autoload/plug.vim --create-dirs \
     https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim


" ====== Plugins ======
call plug#begin('~/.vim/plugged')

" השלמות חכמות
Plug 'neoclide/coc.nvim', {'branch': 'release'}

call plug#end()

" ====== General Settings ======
set nocompatible
set number
syntax on
filetype plugin indent on

" ====== Auto completion behavior ======
set completeopt=menuone,noinsert,noselect
set shortmess+=c

" ====== Colors ======
colorscheme desert

" ====== Coc.nvim Settings ======
" Ctrl + Space לפתיחת השלמות
inoremap <silent><expr> <C-Space> coc#refresh()

" נווט בין הצעות עם Tab
inoremap <expr> <Tab> pumvisible() ? "\<C-n>" : "\<Tab>"
inoremap <expr> <S-Tab> pumvisible() ? "\<C-p>" : "\<S-Tab>"

" קפיצה להגדרה
nmap <silent> gd <Plug>(coc-definition)

" תיעוד (hover)
nnoremap <silent> K :call CocActionAsync('doHover')<CR>
sudo dnf install gcc gcc-c++ make cmake pkg-config openssl-devel -y







{
  "suggest.noselect": false,
  "suggest.enablePreview": true,
  "suggest.acceptOnEnter": "both",
  "languageserver": {
    "clangd": {
      "command": "clangd",
      "filetypes": ["c", "cpp"]
    },
    "asm-lsp": {
      "command": "asm-lsp",
      "filetypes": ["asm", "s", "S"]
    }
  }
}
" גורם ל־Enter לבחור הצעה כשיש השלמה פתוחה
inoremap <silent><expr> <CR> pumvisible() ? coc#_select_confirm() : "\<CR>"



" ======== COC COLOR TWEAKS ========

" צבע רקע של תיבת ההשלמה
highlight Pmenu guibg=#1a1b26 guifg=#c0caf5

" צבע בחירה בתוך ההשלמה
highlight PmenuSel guibg=#33467C guifg=#ffffff gui=bold

" צבע מסגרת (אם אתה רוצה גבול קל)
highlight PmenuBorder guifg=#565f89

" הדגשת פריטים שנבחרו מתוך Coc
highlight CocMenuSel guibg=#3b4261 guifg=#ffffff

" צבעים לטקסטים של שגיאות/אזהרות
highlight CocErrorSign guifg=#f7768e
highlight CocWarningSign guifg=#e0af68
highlight CocInfoSign guifg=#7aa2f7
highlight CocHintSign guifg=#9ece6a

